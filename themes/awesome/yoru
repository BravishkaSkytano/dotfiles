echo "This script install the Yoru theme by rxyhn for AwesomeWM"
read -rp "Have you installed AwesomeWM? [y/n]: " reply
case $reply in
    [yY]* ) echo "Great!" && sleep 1 ;;
    [nN]* ) echo "Please install AwesomeWM first, then run this script again." && exit 1 ;;
esac

echo "Yoru requires the following packages:"
echo "  picom-git wezterm rofi acpi acpid acpi_call upower lxappearance-gtk3"
echo "  jq inotify-tools polkit-gnome xdotool xclip gpick ffmpeg blueman redshift"
echo "  pipewire pipewire-alsa pipewire-pulse alsa-utils brightnessctl feh maim"
echo "  mpv mpd mpc mpdris2 python-mutagen ncmpcpp playerctl"
read -rp "Do you have these packages installed? [y/n]: " reply
case $reply in
    [yY]* ) echo "Beautiful." && sleep 1 ;;
    [nN]* ) echo "Please install them before continuing" && exit 1 ;;
esac

echo "Enabling mpd..."
sleep 2
systemctl --user enable mpd.service
systemctl --user start mpd.service

echo "Cloning rxyhn/yoru..."
sleep 2
cd
git clone --depth 1 --recurse-submodules https://github.com/rxyhn/yoru.git
cd yoru && git submodule update --remote --merge

echo "Copying config files..."
sleep 2
cp -r config/* ~/.config/

echo "Installing fonts..."
sleep 2
mkdir ~/.fonts
cp -r misc/fonts/* ~/.fonts/
fc-cache -fv

echo "Congratulations! You have installed Yoru"
echo "Log out or reload your environment."
echo "Bye for now!"
