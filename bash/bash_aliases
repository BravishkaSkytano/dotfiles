alias sysup='sudo apt update; sudo apt upgrade; nix-channel --update; nix-env --install --attr nixpkgs.nix nixpkgs.cacert; flatpak update'

alias c='clear'
alias ls='exa -al'
alias shutdown='systemctl poweroff'
alias v='nvim'
alias r='ranger'
alias t='sudo timeshift --list'
alias ts='~/dotfiles/scripts/snapshot.sh'
alias rw='~/dotfiles/waybar/reload.sh'
alias winclass="xprop | grep 'CLASS'"
